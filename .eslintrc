{
  "extends": [
    "airbnb-typescript/base",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["examples/**"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "no-console": "off"
      }
    }
  ]
}
